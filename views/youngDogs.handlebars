{{!-- Assuming 'dogs' is an array of dog objects passed to this template --}}
<div class="carousel-container">
  <button class="carousel-arrow left-arrow"><i class="fas fa-chevron-left"></i></button>
  <div class="carousel-content">
    {{#each dogs}}
      <div class="card" data-name="{{this.name}}">
        <header class="card-header">
          <p class="card-header-title">{{this.name}}</p>
          <button class="heart-button">
            <i class="far fa-heart"></i> <!-- Font Awesome Heart Icon (i think i need to import a css library to get this to work but cant tell since page isnt there yet-->
          </button>
        </header>
        <div class="card-image">
          <figure class="image is-4by3">
            <!-- API sourced image -->
            <img src="imagelink.jpg" alt="Pet image for {{this.name}}">
          </figure>
        </div>
        <div class="card-content">
          <div class="content">
            <strong>Age:</strong> {{this.age}}<br>
            <strong>Breed:</strong> {{this.breed}}<br>
            <strong>Description:</strong> {{this.description}}<br>
            <strong>Energy Level:</strong> {{this.energyLevel}}<br>
            <strong>Kid Friendly:</strong> {{#if this.kidFriendly}}Yes{{else}}No{{/if}}<br>
            <strong>Other Dog Friendly:</strong> {{#if this.otherDogFriendly}}Yes{{else}}No{{/if}}<br>
            <strong>Spayed/Neutered:</strong> {{#if this.spayedNeutered}}Yes{{else}}No{{/if}}<br>
            <strong>Weight:</strong> {{this.weight}}<br>
            <strong>Special Medical Needs:</strong> {{#if this.specialMedNeeds}}Yes{{else}}No{{/if}}<br>
            <button class="button more-info" id="more-info-{{this.name}}">More Info</button>
            <div class="additional-info is-hidden" id="additional-info-{{this.name}}">
<!-- buttons might not be working, trying to source part from the original js and part from here -->

            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <button class="carousel-arrow right-arrow"><i class="fas fa-chevron-right"></i></button>
</div>

<!-- saved pets section here -->
<div class="title-box" id="saved-pets-section" style="display: none;">
  <h1 class="title is-1">Favorited Dogs</h1>
  <div id="saved-pets-container">
  </div>
</div>

<script src="/js/dogcards.js"></script>